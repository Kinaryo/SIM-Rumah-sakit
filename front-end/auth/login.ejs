<body class="bg-warning-subtle" >

    <% layout ('layouts/app') %>
    <div class="  card row col-sm-12  justify-content-rounded" style="width: 400px; padding: 50px; margin-left: auto; margin-right: auto; margin-top: 125px; background-color: beige;">
        <h1 class="text-center">Login</h1>
        <form action="/login" method="POST" class="vaildated-from" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" required>
                <div class="valid-feedback">
                    looks good!
                </div>

                <div class="invalid-feedback">
                    please fill out this field
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">email</label>
                <input type="email" name="email" id="email" class="form-control" required>
                <div class="valid-feedback">
                    looks good!
                </div>

                <div class="invalid-feedback">
                    please fill out this field
                </div>
            </div>

