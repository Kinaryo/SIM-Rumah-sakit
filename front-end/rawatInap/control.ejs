<% layout('/layouts/app') %>
<div style="position: fixed; top: 50px; left: 0; width: 100%; z-index: 9999;">
    <%- include('../layouts/partials/navbar-rawat-inap')  %>
</div>

<style>
    p{
        margin-left: 0px;
        font-size: 14px;
        margin-top: 0;
    }
    
</style>
<div class="container card py-4" style="max-width: 75%; margin-top: 150px;">
<form action="/rawatinap/controlPasien/<%= pasienrawatinap._id %>/save" method="POST">
    <h3 style="text-align: center;" > <span style=" border-bottom: 2px solid;"> Form Control Pasien </span></h3>



    <div class="row g-3 col-sm-12">
        <div class="row g-3 justify-content-around  col-sm-8" style="margin-top: 30px;" >
            <div class=" row col-sm-7 justify-content-end" >
                <div class="col-sm-6">
                    <p>No Pendafataran</p>
                    <p>Nama </p>
                </div>
                <div class="col-sm-6">
                    <p> : <%= pasienrawatinap.noPendaftaran.noPendaftaran %></p>
                    <p> : <%= pasienrawatinap.noPendaftaran.nama %></p>
                </div>
            </div>
            <div class=" row col-sm-5">
                <div class="col-sm-6">
                    <p>Jenis Kelamin</p>
                    <p>Diagnosa</p>
                </div>
                <div class="col-sm-6">
                    <p> : <%= pasienrawatinap.noPendaftaran.jenisKelamin %></p>
                    <p> : <%= pasienrawatinap.diagnosa %></p>
                </div>
            </div>
        </div>

        <div class="row g-3 justify-content-around col-sm-4" style="margin-top: 15px; border: 1px solid black; padding-bottom: 10px; border-radius: 5px; margin-right: -15px;">
            <div class="col-sm-5" style="font-size: 13px;">
                <label for="tanggalPemeriksaan" class="form-label">Tanggal Pemeriksaan</label>
                <input type="Date" name="controlPasien[tanggalPemeriksaan]" class="form-control sm " id="" placeholder="" required>
            </div>
            <div class="col-sm-4" style="font-size: 13px;">
                <label for="jamPemeriksaan" class="form-label">Jam Pemeriksaan</label>
                <input type="time" name="controlPasien[jamPemeriksaan]" class="form-control sm " id="" placeholder="" required>
            </div>
            <div class=" col-sm-3" style="font-size: 13px; margin-top:15px;">
                <label for="sesi" class="form-label">Sesi</label>
                <input type="text" name="controlPasien[sesi]" class="form-control sm " id="" placeholder="" style="margin-top: 20px;" required>
            </div>

        </div>
    </div>
        <hr>


        <div class="d-flex justify-content-around" style="font-size: 14px;">
            <style>
                .d-flex .mb-1{
                    margin-left: 5px;
                    margin-right: 5px;
                }
            </style>
            <div class="mb-1">
                <label for="keluhan" class="form-label">Keluhan</label>
                <input type="text" name="controlPasien[keluhan]" class="form-control sm " id="name" placeholder="" required>
            </div>
            <div class="mb-1">
                <label for="Respirasi" class="form-label">Respirasi</label>
                <input type="text" name="controlPasien[respirasi]" class="form-control sm " id="name" placeholder="" required>
            </div>
            <div class="mb-1">
                <label for="tensi" class="form-label">Tensi</label>
                <input type="text" name="controlPasien[tensi]" class="form-control sm " id="name" placeholder="" required>
            </div>

            <div class="mb-1">
                <label for="nadi" class="form-label">Nadi</label>
                <input type="text" name="controlPasien[nadi]" class="form-control sm " id="nadi" placeholder="" required>
            </div>
            <div class="mb-1">
                <label for="oksigen" class="form-label">Kadar Oksigen</label>
                <input type="text" name="controlPasien[kadarOksigen]" class="form-control sm " id="oksigen" placeholder="" required>
            </div>
        </div>
        <div class="d-flex justify-content-around " style="font-size: 14px;">
            <div class="mb-1">
                <label for="" class="form-label" >Catatan</label>
                <textarea name="controlPasien[catatan]" id="" cols="300" rows="2" type="text" class="form-control sm" required></textarea>
            </div>
        </div>





        <div class=" d-flex justify-content-end">
            <button type="submit" class="btn btn-success mt-3" style="margin-left: 10px;">Simpan</button>
            <a href="/rawatinap/daftarPasien/" style="margin-left: 10px; margin-right: 10px;"><button type="button" class="btn  btn-danger mt-3">Cancel</button></a>
        </div>
    </form>
</div>
