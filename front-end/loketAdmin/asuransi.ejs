<% layout('/layouts/app') %>
<div style="position: fixed; top: 50px; left: 0; width: 100%; z-index: 9999;">
    <%- include('../layouts/partials/navbar-admin-loket')  %>
</div>


 <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 20px;
        }
        h2 {
            color: #333;
        }
        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 12px;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #f1f1f1;
        }

        .image a img {
            max-width: 25px;
        }
        table tr th {
            text-align: center;
            justify-content: center;
        }

    </style>
<div style="margin-top: 125px;">


<h2 style="text-align: center;">Asuransi</h2>
<div class="card">
<% const totalPenggunaBPJS = bpjs.length; %>
<p>BPJS : <span><%= totalPenggunaBPJS %></span></p>
<div>
<table>
    <tr>
        <th>No</th>
        <th>No.Pendaftaran</th>
        <th>Nama</th>
        <th>NIK</th>
        <th>Aksi</th>
    </tr>
    <% for (let index = 0; index < bpjs.length; index++) { %>
        <tr>
            <td><%= index + 1 %></td>
            <td><%= bpjs[index].asuransi.noPendaftaran %></td>
            <td style="min-width: 200px;"><%= bpjs[index].asuransi.nama%></td>
            <td> <%=bpjs[index].asuransi.nik %></td>
            
            <!-- Isilah kolom-kolom lain sesuai dengan properti pasien yang sesuai -->
            <td>
                <div class="image">
                    <a href=""><img src="https://res.cloudinary.com/ddrepuzxq/image/upload/v1702875116/simrs/image-removebg-preview_4_y1gwhd.png" alt="hapus"></a>
                    <a href=""><img src="https://res.cloudinary.com/ddrepuzxq/image/upload/v1702875219/simrs/image-removebg-preview_5_jysq26.png" alt="edit"></a>
                </div>
            </td>
        </tr>
    <% } %>
</table>
